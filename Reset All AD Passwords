$Users = Get-ADUser -searchbase "OU=Users,OU=SilverStone,DC=ssd,DC=local" -Filter *
$NewPassword = Read-Host -Prompt "Enter the new password for all users" -AsSecureString

Foreach ($user in $Users){
    Write-Host "Resetting password for: "$user.UserPrincipalName
    Set-ADAccountPassword -Identity $user.DistinguishedName -NewPassword $NewPassword -Reset
}